generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Palette {
    id             Int      @id @default(autoincrement())
    name           String
    category       String?
    image          String
    colorPoints    Json //  id: 1,x: 214.875,y: 96.31690140845072,color: "rgb(255, 211, 222)",
    originalColors String[]
    colors         Color[]
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt

    @@index([name])
    @@map("palettes")
}

model Color {
    hex      String    @id
    name     String    @unique
    palettes Palette[]

    @@map("colors")
}
